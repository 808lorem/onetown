section.contactus
	.container.contactus__container
		h2.contactus__title contact us
		.contactus__flexbox
			.contactus__block
				h3.contactus__block_title your details
				form(action="#" method="post").contactus__form
					.contactus__form_inputbox
						input(type="text" name="username" placeholder="name").contactus__form_input.contactus__form_input_mb
						input(type="email" name="useremail" placeholder="email address").contactus__form_input
						input(type="text" name="companyname" placeholder="Company name").contactus__form_input
					.contactus__rangebox
						.contactus__form_rangebox
							.contactus__form_flexbox
								h3.contactus__block_title.contactus__form_title project estimate
								input(type="text" id="price" readonly name="project_estimate").contactus__form_input_range
							#range-price
						.contactus__form_rangebox
							.contactus__form_flexbox
								h3.contactus__block_title.contactus__form_title time frame
								input(type="text" id="time" readonly name="time_frame").contactus__form_input_range
							#range-time
					.contactus__form_checkbox
						h3.contactus__block_title.contactus__checkbox_title project area
						.contactus__checkbox
							+contactus__checkbox_wrap('Mobile Apps', 'mobile')
							+contactus__checkbox_wrap('Web  Design & Development', 'web')
							+contactus__checkbox_wrap('Identity Creation', 'identity')
						.contactus__checkbox
							+contactus__checkbox_wrap('Brand Promotion', 'brand')
							+contactus__checkbox_wrap('Graphic Design', 'graphic')
							+contactus__checkbox_wrap('Motion Dynamics', 'motion')
					textarea(name="description" placeholder="project descrpition").contactus__form_textarea
					input(type="submit" value="submit details").link__btn.contactus__form_submit
			.contactus__block.contactus__block_info
				h3.contactus__block_title contact info
				.contactus__address
					span.contactus__address_text.contactus__address_companyname .OneTown  Inc
					span.contactus__address_text Street  1234, ST B
					span.contactus__address_text Country Name
					span.contactus__address_text Pin - 123456
				a(href="tel:1234567890").contactus__info_contact Tel:  (123) 456 7890
				a(href="mailto:info@domain.com").contactus__info_contact Email: info@domain.com
				.contactus__info_social
					a(href="javascript:void(0);").contactus__info_link.contactus__info_link_twitter
					a(href="javascript:void(0);").contactus__info_link.contactus__info_link_facebook
					a(href="javascript:void(0);").contactus__info_link.contactus__info_link_pinterest
					a(href="javascript:void(0);").contactus__info_link.contactus__info_link_linkedin
					a(href="javascript:void(0);").contactus__info_link.contactus__info_link_skype
				img(src="static/img/general/contact_img.jpg").contactus__info_img